@page
@model AdministracionDePersonal.Pages.Requisitos.IndexModel
@{
    ViewData["Title"] = "Requisitos";
}

<h1>Requisitos</h1>

<p>
    <a class="btn btn-primary" asp-page="Create">Nuevo Requisito</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>IdRequisito</th>
            <th>IdPuesto</th>
            <th>Descripción</th>
            <th>Tipo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Requisitos)
        {
            <tr>
                <td>@item.IdRequisito</td>
                <td>@item.IdPuesto</td>
                <td>@item.Descripcion</td>
                <td>@item.Tipo</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@item.IdRequisito">Editar</a> |
                    <a asp-page="Delete" asp-route-id="@item.IdRequisito">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>