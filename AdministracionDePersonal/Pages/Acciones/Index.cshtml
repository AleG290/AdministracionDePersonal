@page
@model AdministracionDePersonal.Pages.Acciones.IndexModel
@{
    ViewData["Title"] = "Acciones De Personal";
    Layout = "_LayoutAdm";
}

<h1>Acciones De Personal</h1>

<p>
    <a class="btn btn-primary" asp-page="Create">Nueva Acción</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>IdAccion</th>
            <th>Empleado</th>
            <th>Jefatura</th>
            <th>Fecha</th>
            <th>Descripcion</th>
            <th>TipoAccion</th>
            <th>Observaciones</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Acciones)
        {
            <tr>
                <td>@item.IdAccion</td>
                <td>@item.NombreEmpleado</td>
                <td>@item.NombreJefatura</td>
                <td>@item.Fecha.Value.ToString("yyyy-MM-dd")</td>
                <td>@item.Descripcion</td>
                <td>@item.TipoAccion</td>
                <td>@item.Observaciones</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@item.IdAccion" class="btn btn-sm btn-primary">Editar</a>
                    <a asp-page="Delete" asp-route-id="@item.IdAccion" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>