@page
@model AdminDePersonal.Pages.Areas.IndexModel
@{
    ViewData["Title"] = "Áreas";
}

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Administración de Áreas</title>

    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    <link href="css/StyleSheet.css" rel="stylesheet" />

    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script> <!-- SweetAlert2 -->
</head>
<body class="sb-nav-fixed">
    <div id="layoutSidenav">
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">Áreas</h1>

                    <p>
                        <a class="btn btn-primary" asp-page="creararea" id="btn-crear">Nueva Área</a>
                    </p>

                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-table me-1"></i> Lista de Áreas
                        </div>
                        <div class="card-body">
                            <table id="tablaAreas" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>IdÁrea</th>
                                        <th>Nombre</th>
                                        <th>IdJefatura</th>
                                        <th>Descripción</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Areas)
                                    {
                                        <tr>
                                            <td>@item.IdArea</td>
                                            <td>@item.Nombre</td>
                                            <td>@item.IdJefatura</td>
                                            <td>@item.Descripcion</td>
                                            <td>
                                                <div class="d-flex gap-2">
                                                    <a asp-page="/Areas/editararea" asp-route-id="@item.IdArea" class="btn btn-primary">Editar</a>
                                                    <button class="btn btn-danger btn-eliminar" data-id="@item.IdArea">Eliminar</button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js" crossorigin="anonymous"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const tabla = document.querySelector("#tablaAreas");
            new simpleDatatables.DataTable(tabla, { perPage: 10 });

            // Agregar evento para el botón de crear
            document.getElementById("btn-crear").addEventListener("click", function (event) {
                event.preventDefault(); // Evitar redirección inmediata

                Swal.fire({
                    icon: "info",
                    title: "Crear Nueva Área",
                    text: "¿Quieres crear una nueva área?",
                    showCancelButton: true,
                    confirmButtonText: "Sí, continuar",
                    cancelButtonText: "Cancelar"
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = "@Url.Page("creararea")";
                    }
                });
            });

            // Evento para el botón de eliminar
            document.querySelectorAll(".btn-eliminar").forEach(button => {
                button.addEventListener("click", function () {
                    let id = this.getAttribute("data-id");

                    Swal.fire({
                        title: "¿Estás seguro?",
                        text: "Esta acción no se puede deshacer.",
                        icon: "warning",
                        showCancelButton: true,
                        confirmButtonText: "Sí, eliminar",
                        cancelButtonText: "Cancelar"
                    }).then((result) => {
                        if (result.isConfirmed) {
                            // Redirigir a la página de eliminación
                            window.location.href = "@Url.Page("Delete")?id=" + id;
                        }
                    });
                });
            });
        });
    </script>
</body>
